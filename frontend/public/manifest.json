{
  "manifest_version": 3,
  "name": "My React Chrome Extension",
  "short_name": "React App",
  "description": "A simple React-based Chrome Extension.",
  "version": "1.0",
  "icons": {
    "16": "favicon.ico",
    "48": "logo192.png",
    "128": "logo512.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": "favicon.ico"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "options_page": "options.html",
  "content_security_policy": {
    "extension_pages": {
      "script-src": "'self'; object-src 'self';"
    }
  },
  "theme": {
    "default": {
      "background": {
        "images": {
          "light": "background-light.png",
          "dark": "background-dark.png"
        },
        "color": "#ffffff"
      }
    }
  }
}
